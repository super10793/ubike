<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator">

    <scale
        android:duration="150"
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="0"
        android:pivotY="0"
        android:toXScale="1"
        android:toYScale="1" />

    <alpha
        android:duration="150"
        android:fromAlpha="0"
        android:toAlpha="1" />

</set>