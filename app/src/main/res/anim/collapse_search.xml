<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator">

    <scale
        android:duration="150"
        android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="0"
        android:toYScale="0"
        android:pivotX="1"
        android:pivotY="1" />

    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="150" />

</set>