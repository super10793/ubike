<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_taipei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_taipei" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_newTaipei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_newTaipei" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_taoyuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_taoyuan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_hsinchu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_hsinchu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_hsinchuCounty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_hsinchuCounty" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_miaoliCounty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_miaoliCounty" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_taichung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_taichung" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_chiayi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_chiayi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kaohsiung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_kaohsiung" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_tainan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_tainan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_pingtungCounty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:text="@string/city_pingtungCounty" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kinmenCounty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_support_city_item"
                android:visibility="invisible"
                android:text="@string/city_kinmenCounty" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_give_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_support_city_item"
            android:text="@string/give_full_permission_hint"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</layout>
