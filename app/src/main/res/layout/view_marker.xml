<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_marker"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/pin"
            android:tint="#5E92F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/marker_circle"
            android:translationY="4.5dp"
            app:layout_constraintEnd_toEndOf="@id/iv_marker"
            app:layout_constraintStart_toStartOf="@id/iv_marker"
            app:layout_constraintTop_toTopOf="@id/iv_marker" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_light"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:src="@drawable/light_bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/iv_marker"
            app:layout_constraintStart_toStartOf="@id/iv_marker"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
